{
    "name": "strategy-game-backend",
    "version": "1.0.0",
    "description": "多节点策略经营游戏后端服务",
    "main": "server.js",
    "scripts": {
        "start": "node server.js",
        "dev": "nodemon server.js",
        "create-admin": "node scripts/createAdmin.js",
        "reset-all-data-bootstrap-admin": "node scripts/resetAllDataAndBootstrapAdmin.js",
        "init-user-domain-preferences": "node scripts/initUserDomainPreferences.js",
        "migrate-all-data": "node scripts/migrateAllDataAndVerify.js --mode=migrate-verify --strict=true",
        "rebuild-all-migrated-data": "node scripts/migrateAllDataAndVerify.js --mode=migrate-verify --reset-target=true --strict=true",
        "verify-migrated-data": "node scripts/migrateAllDataAndVerify.js --mode=verify --strict=true",
        "migrate-and-clean-legacy": "node scripts/migrateAllDataAndVerify.js --mode=migrate-verify --reset-target=true --clear-legacy-notifications=true --clear-legacy-participants=true --strict=true",
        "migrate-and-clean-all-legacy": "node scripts/migrateAllDataAndVerify.js --mode=migrate-verify --reset-target=true --clear-legacy-notifications=true --clear-legacy-participants=true --clear-legacy-node-senses=true --clear-legacy-title-states=true --strict=true",
        "migrate-distribution-participants": "node scripts/migrateDistributionParticipants.js",
        "migrate-domain-title-states": "node scripts/migrateDomainTitleStatesToCollection.js",
        "migrate-domain-title-projection": "node scripts/migrateDomainTitleProjection.js",
        "migrate-notifications": "node scripts/migrateNotificationsToCollection.js",
        "migrate-node-senses": "node scripts/migrateNodeSensesToCollection.js",
        "sync-user-intel-snapshots": "node scripts/syncUserIntelSnapshots.js",
        "init-user-levels": "node scripts/initUserLevels.js",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "keywords": [
        "game",
        "strategy",
        "websocket",
        "nodejs"
    ],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "express": "^4.19.2",
        "socket.io": "^4.7.2",
        "mongoose": "^8.0.0",
        "cors": "^2.8.5",
        "jsonwebtoken": "^9.0.2",
        "bcryptjs": "^2.4.3",
        "dotenv": "^16.3.1"
    },
    "devDependencies": {
        "nodemon": "^3.1.10"
    }
}
